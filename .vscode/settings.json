{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.formatAll.terraform": "explicit",
    "source.organizeImports": "explicit"
  },

  // TODO: 以下、mdxでimportsがコードのボトムに追加されるのを防ぐための設定。あとで直す。
  "[mdx]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never"
    }
  },

  "eslint.workingDirectories": ["./src", "./functions"],

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "cSpell.words": [
    "autodocs",
    "chflick",
    "clsx",
    "eamodio",
    "esbenp",
    "firecode",
    "gcloud",
    "ionicons",
    "joshuanianji",
    "lcov",
    "lefthook",
    "lintjavascript",
    "lintmarkdown",
    "lintstyles",
    "lucide",
    "mhutchie",
    "postcss",
    "presync",
    "pullstate",
    "signin",
    "signout",
    "stylelint",
    "tcono",
    "tfvars",
    "typegen",
    "unifiedjs",
    "unmocked",
    "Viewports"
  ]
}
